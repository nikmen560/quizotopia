    {% block head %}

    {% endblock %}
</head>
<body>

<header>
        <nav class="navbar navbar-expand-md navbar-light bg-light h4">

            <a class="navbar-brand" href="{{ path('mainpage') }}"><img src="/public/assets/images/logo1.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        {% block navigation %}

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('mainpage') }}">Home<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        {% endblock %}
    </nav>
</header>
<main>

<div id="content" class="container-fluid">
    <div class="row no-gutters justify-content-center">
        {% block content %}

        {% endblock %}
    </div>
</div>

</main>
