{% extends 'admin_base.twig' %}

{% block title %}Hello CreateQuizController!{% endblock %}

{% block content %}
    <a href="{{ path('initial_create_question') }}" class="btn btn-block btn-outline-dark">Create question</a>
    {{ form_start(CreateQuizForm) }}
    <button class="btn btn-block btn-primary bg-info mt-3" type="submit">Create Quiz</button>
    {{ form_label(CreateQuizForm.quizName) }}
    {{ form_widget(CreateQuizForm.quizName) }}
    <button class="btn btn-block btn-primary btn-hide">Choose questions</button>



<div class="table-hide" style="display: none;">

    <table class="table" id="q-table">

        <thead>
        <tr>
            <th></th>
            <th>question</th>
        </tr>
        </thead>
        <tbody>
        {% for question in CreateQuizForm.quizQuestions  %}
            <tr>
                <td>{{ form_widget(question) }}</td>
                <td>{{ form_label(question) }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    </div>
    {{ form_end(CreateQuizForm) }}
