{% extends 'admin_base.twig' %}

{% block title %}Quiz creation{% endblock %}

{% block content %}


    <div class="col-12 col-lg-4 col-md-4">
        {# <div class="form-group input-group"> #}
        {{ form_start(CreateQuizForm) }}


        <div class="btn-group" role="group" aria-label="Basic example">
            <button class="btn btn-primary bg-info " type="submit">Create Quiz</button>
            <button class="btn btn-primary btn-hide" type="button">Choose questions</button>

        </div>
        {{ form_label(CreateQuizForm.quizName) }}
        {{ form_widget(CreateQuizForm.quizName) }}
        <div class="table-hide" style="visibility: hidden; ">

            <table class="table" id="q-table">
                <thead>
                <tr>
                    <th></th>
                    <th>question</th>
                </tr>
                </thead>
                <tbody>
                {% for question in CreateQuizForm.quizQuestions %}
                    <tr>
                        <td>{{ form_widget(question) }}</td>
                        <td>{{ form_label(question) }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
        {{ form_end(CreateQuizForm) }}
        {# </div> #}
    </div>

    <script>

        $(document).ready(function () {
            $('#q-table').DataTable({
                "paging": false,
                "ordering": false,
                "info": false,
            });
            $('.btn-hide').click(function () {
                if ($('.table-hide').css('visibility') === 'hidden')
                    $('.table-hide').css('visibility', 'visible');
                else
                    $('.table-hide').css('visibility', 'hidden');
            });
            // $('.btn-hide').click(function () {
            //     $('.table-hide').slideToggle(300);
            //     return false;
            // });
        });

    </script>

{% endblock %}

