{% extends 'base.html.twig' %}
    {% block title %}Quizotopia{% endblock %}

{% block navigation %}

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

        </ul>
        <a class=" nav-link btn btn-outline-success  my-2 my-sm-0 btn-lg " href="{{ path('app_login') }}">{% trans %}Sign In{% endtrans %}</a>
    </div>
    </nav>

{% endblock %}
{% block container %}

    {% block content %}
        {# <div class="container-fluid light-grey-background"> #}

        <div class="view"
             style="background-image: url(/public/assets/images/home.jpg); background-repeat: no-repeat; background-size: cover; background-position: center center; ">

            <div class="container py-4">

                <section id="services" class="mt-3 mb-3 pb-3">

                    <h1 class="text-center title p-5 text-dark bg-white card  font-weight-bold wow fadeIn"
                        data-wow-delay="0.2s">
                        <strong>{% trans %}Welcome to Quizotopia!{% endtrans %}</strong>
                    </h1>
                    <div class="row mt-5">
                        <div class=" card card-body col-md-6 mb-5 mt-md-0 mt-5 p-4 text-center text-md-left bg-white">

                            <h1 class="h1-responsive font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">{% trans %}Sign up right now!{% endtrans%} </h1>
                            <hr class="hr-black wow fadeInLeft" data-wow-delay="0.3s">
                            <h6 class="mb-3 wow fadeInLeft" data-wow-delay="0.3s">{% trans %}Do you want to play quiz? If you really do, please press the Sign In button!{% endtrans %}</h6>
                            <a class="btn btn-outline-black wow fadeInLeft" data-wow-delay="0.3s" href="{{ path('app_login') }}">{%trans %}Sign In{% endtrans %}</a>

                        </div>

                        <div class="row wow fadeIn" data-wow-delay="0.4s">



                            <div class="col-md-6 mb-4 text-center">
                                <div class="card card-body text-left white hoverable">
                                    <p class="font-weight-bold title font-weight-bold dark-grey-text text-uppercase spacing mt-4 mx-4">
                                        <i class="fa fa-square orange-text mr-2" aria-hidden="true"></i>
                                        <strong>{% trans %}Blogging{% endtrans %}</strong>
                                    </p>
                                    <p class="grey-text font-small mx-4">{% trans %}Build your community and create giveaways “live” online{% endtrans %}
                                    <p class="font-small font-weight-bold orange-text mx-4 mb-0">
                                        <a>{% trans %}read more{% endtrans %}</a>
                                    </p>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4 text-center">

                                <div class="card card-body text-left white hoverable">
                                    <p class="font-weight-bold title font-weight-bold dark-grey-text text-uppercase spacing mt-4 mx-4">
                                        <i class="fa fa-square orange-text mr-2" aria-hidden="true"></i>
                                        <strong>{% trans %}Web design{% endtrans %}</strong>
                                    </p>
                                    <p class="grey-text font-small mx-4">{% trans %}Our web application is well designed in minimalistic way{% endtrans %}
                                    <p class="font-small font-weight-bold orange-text mx-4 mb-0">
                                        <a>{% trans %}read more{% endtrans %}</a>
                                    </p>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4 text-center">
                                <div class="card card-body text-left white hoverable">
                                    <p class="font-weight-bold title font-weight-bold dark-grey-text text-uppercase spacing mt-4 mx-4">
                                        <i class="fa fa-square orange-text mr-2" aria-hidden="true"></i>
                                        <strong>{% trans %}Development{% endtrans %}</strong>
                                    </p>
                                    <p class="grey-text font-small mx-4">{% trans %}Our team is consist of two ambitious developers, who have developed this app for only month and a half.{% endtrans %}
                                    <p class="font-small font-weight-bold orange-text mx-4 mb-0">
                                        <a>{% trans %}read more{% endtrans %}</a>
                                    </p>
                                    </p>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4 text-center">
                                <div class="card card-body text-left white hoverable">
                                    <p class="font-weight-bold title font-weight-bold dark-grey-text text-uppercase spacing mt-4 mx-4">
                                        <i class="fa fa-square orange-text mr-2" aria-hidden="true"></i>
                                        <strong>{% trans %}Memorization{% endtrans %}</strong>
                                    </p>
                                    <p class="grey-text font-small mx-4">{% trans %}Are you trying to memorize something? Just try our app out and you won't even notice how you already memorize it.{% endtrans %}
                                    <p class="font-small font-weight-bold orange-text mx-4 mb-0">
                                        <a>{% trans %}read more{% endtrans %}</a>
                                    </p>
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>
        <script>
            new WOW().init()
        </script>
    {% endblock %}
{% endblock %}
