{% extends 'base.html.twig' %}

{% block title %}Edit question{% endblock %}

{% block content %}

<div class="container-fluid">
    <div class="row no-gutters justify-content-center">
        <div class="col-12 col-lg-4 col-md-4 ">
            <div class="form-login shadow-lg border" style="padding: 30px; margin: 20% auto">
                {{ form_start(form) }}

                <h1 class="h3 mb-3 font-weight-normal text-center mb-4">Edit question</h1>


                <div class="form-group input-group">
                    {{ form_widget(form.content,{'attr': {
                        'class': 'form-control',
                        'placeholder': "Enter a question"}
                    }) }}
                </div>

                <div class="form-group input-group">
                    {{ form_widget(form.correct_answer,{'attr': {
                        'class': 'form-control',
                        'placeholder': "Correct answer"}
                    }) }}

                </div>

                <div class="form-group input-group">
                    {{ form_widget(form.answer_1,{'attr': {
                        'class': 'form-control',
                        'placeholder': "Other answer"}
                    }) }}

                </div>
                {% if count>1 %}
                    <div class="form-group input-group">
                        {{ form_widget(form.answer_2,{'attr': {
                            'class': 'form-control',
                            'placeholder': "Other answer"}
                        }) }}

                    </div>
                    {% if count>2 %}
                        <div class="form-group input-group">
                            {{ form_widget(form.answer_3,{'attr': {
                                'class': 'form-control',
                                'placeholder': "Other answer"}
                            }) }}

                        </div>
                        {% if count>3 %}
                            <div class="form-group input-group">
                                {{ form_widget(form.answer_4,{'attr': {
                                    'class': 'form-control',
                                    'placeholder': "Other answer"}
                                }) }}

                            </div>
                            {% if count>4 %}
                                <div class="form-group input-group">
                                    {{ form_widget(form.answer_5,{'attr': {
                                        'class': 'form-control',
                                        'placeholder': "Other answer"}
                                    }) }}

                                </div>
                                {% if count>5 %}
                                    <div class="form-group input-group">
                                        {{ form_widget(form.answer_6,{'attr': {
                                            'class': 'form-control',
                                            'placeholder': "Other answer"}
                                        }) }}

                                    </div>
                                    {% if count>6 %}
                                        <div class="form-group input-group">
                                        {{ form_widget(form.answer_7,{'attr': {
                                            'class': 'form-control',
                                            'placeholder': "Other answer"}
                                        }) }}
                                        {% if count>7 %}
                                            </div>
                                            <div class="form-group input-group">
                                                {{ form_widget(form.answer_8,{'attr': {
                                                    'class': 'form-control',
                                                    'placeholder': "Other answer"}
                                                }) }}
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                {% endif %}
            </div>
            <button class="btn btn-block btn-primary bg-info mt-3" type="submit">Edit</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
