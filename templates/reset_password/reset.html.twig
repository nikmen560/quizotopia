{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center">
            <div class="col-12 col-lg-4 col-md-4 ">
                <div class="form-login shadow-lg border" style="padding: 30px; margin: 30% auto">


                    {{ form_start(resetForm) }}
                    <h1 class="h3 mb-3 font-weight-normal text-center">Reset password</h1>

                    <div class="input-group mt-4">

                            <span class="input-group-append bg-white border-left-0">
                                <span class="input-group-text bg-transparent">
                                    <i class="icon fa fa-user p-1"></i>
                                </span>
                            </span>


                        {{ form_widget(resetForm.plainPassword, {'attr': {
                            'class': 'form-control',
                            'placeholder':"new password"}}) }}

                    </div>

                    <button class="btn btn-block btn-primary bg-info mt-3">Reset password</button>

                    {{ form_end(resetForm) }}

                </div>

            </div>
        </div>
    </div>

{% endblock %}
