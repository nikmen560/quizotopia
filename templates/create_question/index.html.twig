{% extends 'admin_base.twig' %}

{% block title %}Create question{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row no-gutters justify-content-center">
            <div class="col-12 col-lg-4 col-md-4 ">
                <div class="form-login shadow-lg border" style="padding: 30px; margin: 20% auto">
                    {{ form_start(CreateQuestionForm) }}

                    <h1 class="h3 mb-3 font-weight-normal text-center mb-4">Create question</h1>
                    <div class="form-group input-group">
                        {{ form_widget(CreateQuestionForm.content,{'attr': {
                            'class': 'form-control',
                            'placeholder': "Enter a question",
                        }
                        }) }}
                    </div>

                    <div class="form-group input-group">
                        {{ form_widget(CreateQuestionForm.correct_answer,{'attr': {
                            'class': 'form-control',
                            'placeholder': "Correct answer",
                            'required': 'required',
                        }
                        }) }}

                    </div>

                    <div class="form-group input-group">
                        {{ form_widget(CreateQuestionForm.answer_0,{'attr': {
                            'class': 'form-control',
                            'placeholder': "Other answer",
                            'required': 'required',
                        }
                        }) }}

                    </div>

                    {% if count>1 %}
                        <div class="form-group input-group">
                            {{ form_widget(CreateQuestionForm.answer_1   ,{'attr': {
                                'class': 'form-control',
                                'placeholder': "Other answer",
                                'required': 'required',
                            }
                            }) }}
                        </div>
                        {% if count>2 %}
                            <div class="form-group input-group">
                                {{ form_widget(CreateQuestionForm.answer_2,{'attr': {
                                    'class': 'form-control',
                                    'placeholder': "Other answer",
                                    'required': 'required',
                                }
                                }) }}

                            </div>
                            {% if count>3 %}
                                <div class="form-group input-group">
                                    {{ form_widget(CreateQuestionForm.answer_3,{'attr': {
                                        'class': 'form-control',
                                        'placeholder': "Other answer",
                                        'required': 'required',
                                    }
                                    }) }}

                                </div>
                                {% if count>4 %}
                                    <div class="form-group input-group">
                                        {{ form_widget(CreateQuestionForm.answer_4,{'attr': {
                                            'class': 'form-control',
                                            'placeholder': "Other answer",
                                            'required': 'required',
                                        }
                                        }) }}

                                    </div>
                                    {% if count>5 %}
                                        <div class="form-group input-group">
                                            {{ form_widget(CreateQuestionForm.answer_5,{'attr': {
                                                'class': 'form-control',
                                                'placeholder': "Other answer",
                                                'required': 'required',
                                            }
                                            }) }}

                                        </div>
                                        {% if count>6 %}
                                            <div class="form-group input-group">
                                            {{ form_widget(CreateQuestionForm.answer_6,{'attr': {
                                                'class': 'form-control',
                                                'placeholder': "Other answer",
                                                'required': 'required',
                                            }
                                            }) }}
                                            {% if count>7 %}
                                                </div>
                                                <div class="form-group input-group">
                                                    {{ form_widget(CreateQuestionForm.answer_7,{'attr': {
                                                        'class': 'form-control',
                                                        'placeholder': "Other answer",
                                                        'required': 'required',
                                                    }
                                                    }) }}
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                    <button class="btn btn-block btn-primary bg-info mt-3" type="submit">
                        Create
                    </button>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(CreateQuestionForm) }}
    </div>
{% endblock %}
