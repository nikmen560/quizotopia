{% extends 'admin_base.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block navigation %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light h4">

        <a class="navbar-brand" href="{{ path('mainpage') }}"><img src="/public/assets/images/logo1.png" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('mainpage') }}">Admin Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('admin_users') }}">Users control</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="{{ path('mainpage') }}">Quizzes control</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_questions') }}">Questions control</a>
                </li>
            </ul>
            <a class="nav-link btn btn-secondary" href="{{ path('app_logout') }}">logout</a>
        </div>
    </nav>
{% endblock %}

{% block content %}

    <table class="table mt-4" id="usertable">
        <thead>
        <tr>
            <th scope="col">{{ knp_pagination_sortable(users, 'id', 'u.id') }}</th>

            <th scope="col"{% if users.isSorted('u.username') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(users, 'Users', 'u.username') }}</th>
            <th scope="col"{% if users.isSorted('u.email') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(users, 'Email', 'u.email') }}
            </th>
            <th scope="col">Roles</th>
            <th scope="col" {% if users.isSorted('u.status') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(users, 'Status', 'u.status') }}
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% if users %}
            {% for user in users %}
                <tr>
                    <td scope="col">{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles | json_encode }}</td>
                    {% if user.status %}
                        <td>active</td>
                    {% else %}
                        <td>not active</td>
                    {% endif %}
                    <td><a class="btn btn-danger" value="{{ user.id }}" href="{{ path('delete_user', {"id": user.id})  }};">Delete</a></td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>

{% endblock %}
