{% extends 'admin_base.twig' %}

{% block title %}Users manager{% endblock %}

{% block navigation %}
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('mainpage') }}">Admin Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('admin_users') }}">Users control</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{ path('admin_quizes') }}">Quizzes control</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_questions') }}">Questions control</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Create
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('initial_create_question') }}">Create Question</a>
                        <a class="dropdown-item" href="{{ path('create_quiz') }}">Create Quiz</a>
                    </div>
                </li>
            </ul>
            <a class="nav-link btn btn-outline-info" href="{{ path('app_logout') }}">logout</a>
        </div>
    </nav>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4 mb-4 ">
    <table class="table table-striped table-bordered" style="width:100%" id="usertable">
        <thead>
        <tr>
            <th>id</th>

            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if users %}
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td data-priority="1">{{ user.username }}</td>
                    <td data-priority="2">{{ user.email }}</td>
                    <td>{{ user.roles | json_encode }}</td>
                    {% if user.status %}
                        <td>active</td>
                    {% else %}
                        <td>not active</td>
                    {% endif %}
                    <td><a class="btn btn-danger" value="{{ user.id }}" href="{{ path('delete_user', {"id": user.id})  }}">Delete</a></td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
        <tfoot>
        <tr>
            <th >id</th>
            <th >Username</th>
            <th >Email</th>
            <th>Roles</th>
            <th >Status</th>
            <th >Actions</th>
        </tr>
        </tfoot>
    </table>
</div>
    <div class="some-text" style="margin-top: 300px">
        <p style="visibility: hidden">3</p>
    </div>
    {% block js %}
    <script>
        $(document).ready(function () {
            $('#usertable').DataTable({
                responsive: true,
            });
        });
    </script>
    {% endblock %}

{% endblock %}










