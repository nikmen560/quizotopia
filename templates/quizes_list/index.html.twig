{% extends 'base.html.twig' %}

{% block title %}Hello QuizesListController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    {% if quizzes %}
        <div class="card-deck">
        {% for quiz in quizzes %}
            <div class="card">
                <div class="card-body">
                     <h5 class="card-title">{{ quiz.name }}</h5>
                    <button class="btn btn-secondary" value="{{ quiz.id }}" href="{{ path('play_quiz', {"id": quiz.id})  }};">Play</button>
                </div>
            </div>
        {% endfor %}
        </div>
    {% endif %}
{% endblock %}
